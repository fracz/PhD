\ProvidesPackage{plenc}

\DeclareOption{dos}{\def\@coding{cp852}}
\DeclareOption{win}{\def\@coding{utf8}}
\DeclareOption{iso}{\def\@coding{latin2}}
\DeclareOption*{\edef\@coding{\CurrentOption}}
\ExecuteOptions{win}
\ProcessOptions\relax

\renewcommand{\encodingdefault}{T1}
\fontencoding{T1}\selectfont

\RequirePackage[\@coding]{inputenc}

